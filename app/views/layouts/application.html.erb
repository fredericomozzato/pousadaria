<!DOCTYPE html>
<html>
  <head>
    <title>Pousadaria</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <header>
      <nav>
        <ul>
          <li>Pousadaria</li>
            <% if user_signed_in? %>
              <li><%= current_user.email %></li>
              <li><%= link_to "Sair", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %></li>
            <% else %>
              <li><%= link_to "Entrar", new_user_session_path %></li>
            <% end %>
        </ul>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
