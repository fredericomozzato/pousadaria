<h1>Detalhes de Período Sazonal</h1>

<%= form_with model: SeasonalPrice.new do |f| %>
  <div>
    <%= f.label :room, "Quartos disponíveis" %>
    <%= f.collection_select :room_id, @rooms, :id, :name %>
  </div>
  <div>
    <%= f.label :start, "Data de início" %>
    <%= f.date_field :start %>
  </div>
  <div>
    <%= f.label :end, "Data de término" %>
    <%= f.date_field :end %>
  </div>
  <div>
    <%= f.label :price, "Valor da diária" %>
    <%= f.number_field :price, step: 0.01 %>
  </div>
  <div>
    <%= f.submit "Salvar Período Sazonal" %>
  </div>
<% end %>