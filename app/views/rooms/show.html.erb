<h1>Quarto: <%= @room.name %></h1>

<dl>
  <dt>Descrição: </dt>
  <dd><%= @room.description %></dd>
  <dt>Tamanho:</dt>
  <dd><%= @room.size %> m²</dd>
  <dt>Número máximo de hóspedes:</dt>
  <dd><%= @room.max_guests %></dd>
  <dt>Valor da diária:</dt>
  <dd><%= number_to_currency @room.price, unit: "R$", separator: ",", delimiter: "." %></dd>
  <dt>Comodidades:</dt>
  <dd>
    <ul class="ammenities">
      <li>Banheiro privativo: <%= @room.bathroom ? "sim" : "não" %></li>
      <li>Varanda: <%= @room.porch ? "sim" : "não" %></li>
      <li>Ar-condicionado: <%= @room.air_conditioner ? "sim" : "não" %></li>
      <li>Televisão: <%= @room.tv ? "sim" : "não" %></li>
      <li>Guarda-roupas: <%= @room.wardrobe ? "sim" : "não" %></li>
      <li>Cofre: <%= @room.safe ? "sim" : "não" %></li>
      <li>Acessibilidade: <%= @room.accessibility ? "sim" : "não" %></li>
      <li>Wi-fi: <%= @room.wifi ? "sim" : "não" %></li>
    </ul>
  </dd>
  <dt>Disponível para reservas:</dt>
  <dd><%= @room.active? ? "sim" : "não" %></dd>
</dl>

<div>
  <% if owner_signed_in? %>
    <%= link_to "Editar Quarto", edit_room_path(@room) %>
  <% end %>
</div>

<div>
  <h3>Preços Sazonais</h3>
  <%= link_to "Novo Preço Sazonal", new_room_seasonal_price_path(@room) %>
  <ul id="seasonal-prices">
    <% @seasonal_prices.each do |price| %>
      <li><%= link_to price.date_pretty_print, edit_seasonal_price_path(price) %> | <%= number_to_currency price.price, unit: "R$", separator: ",", delimiter: "." %></li>
    <% end %>
  </ul>
</div>

