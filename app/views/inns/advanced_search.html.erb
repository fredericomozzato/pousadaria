<h1 style="text-align: center; margin-top: 20px;"><%= t("advanced_search") %></h1>

  <div class="mb-3 form" id="advanced-search-form">
    <%= form_with(url: search_inns_path, method: :get) do |f| %>
      <div>
        <%= f.label :name, "Nome", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div>
        <%= f.label :city, "Cidade", class: "form-label" %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
      <div class="switches">
        <div class="form-check form-switch">
          <%= f.label :pet_friendly, "Aceita pets", class: "form-check-label" %>
          <%= f.check_box :pet_friendly, class: "form-check-input" %>
        </div>
        <div class="form-check form-switch">
          <%= f.label :accessibility, "AcessÃ­vel para PCD", class: "form-check-label" %>
          <%= f.check_box :accessibility, class: "form-check-input" %>
        </div>
        <div class="form-check form-switch">
          <%= f.label :wifi, "Wi-fi", class: "form-check-label" %>
          <%= f.check_box :wifi, class: "form-check-input" %>
        </div>
        <div class="form-check form-switch">
          <%= f.label :bathroom, "Banheiro privativo", class: "form-check-label" %>
          <%= f.check_box :bathroom, class: "form-check-input" %>
        </div>
        <div class="form-check form-switch">
          <%= f.label :air_conditioner, "Ar-condicionado", class: "form-check-label" %>
          <%= f.check_box :air_conditioner, class: "form-check-input" %>
        </div>
        <div class="form-check form-switch">
          <%= f.label :wardrobe, "Guarda-roupas", class: "form-check-label" %>
          <%= f.check_box :wardrobe, class: "form-check-input" %>
        </div>
        <div class="form-check form-switch">
          <%= f.label :tv, "TV", class: "form-check-label" %>
          <%= f.check_box :tv, class: "form-check-input" %>
        </div>
        <div class="form-check form-switch">
          <%= f.label :porch, "Varanda", class: "form-check-label" %>
          <%= f.check_box :porch, class: "form-check-input" %>
        </div>
        <div class="form-check form-switch">
          <%= f.label :safe, "Cofre", class: "form-check-label" %>
          <%= f.check_box :safe, class: "form-check-input" %>
        </div>
      </div>
      <%= f.hidden_field :advanced, { value: true } %>
      <div class="text-center">
        <%= f.submit t("search_button"), class: "btn btn-lg btn-dark" %>
      </div>
    <% end %>
  </div>