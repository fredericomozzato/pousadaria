<%= form_with model: @inn do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
  </div> 
  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.fields_for :address, @address do |a| %>
      <div>
        <%= a.label :street %>
        <%= a.text_field :street %>
      </div>
      <div>
        <%= a.label :number %>
        <%= a.text_field :number %>
      </div>
      <div>
        <%= a.label :neighborhood %>
        <%= a.text_field :neighborhood %>
      </div>
      <div>
        <%= a.label :city %>
        <%= a.text_field :city %>
      </div>
      <div>
        <%= a.label :state %>
        <%= a.select :state, Address.states.keys, prompt: "Selecione" %>
      </div>
      <div>
        <%= a.label :postal_code %>
        <%= a.text_field :postal_code %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :pay_methods %>
    <%= f.text_field :pay_methods %>
  </div>
  <div>
    <%= f.label :pet_friendly %>
    <%= f.check_box :pet_friendly %>
  </div>
  <div>
    <%= f.label :user_policies %>
    <%= f.text_area :user_policies %>
  </div>
  <div>
    <%= f.label :check_in_time %>
    <%= select_hour Time.new, field_name: "checkin_hour" %>:
    <%= select_minute Time.new, field_name: "checkin_minute", minute_step: 15 %> horas
  </div>
  <div>
    <%= f.label :check_out_time %>
    <%= select_hour Time.new, field_name: "checkout_hour" %>:
    <%= select_minute Time.new, field_name: "checkout_minute", minute_step: 15 %> horas
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>