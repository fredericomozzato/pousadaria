<%= form_with model: @inn do |f| %>
  <div>
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :corporate_name, "Razão social" %>
    <%= f.text_field :corporate_name %>
  </div> 
  <div>
    <%= f.label :registration_number, "CNPJ" %>
    <%= f.text_field :registration_number %>
  </div>
  <div>
    <%= f.label :phone, "Telefone" %>
    <%= f.telephone_field :phone %>
  </div>
  <div>
    <%= f.label :email, "E-mail" %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.fields_for :address_attributes, Address.new do |a| %>
      <div>
        <%= a.label :street, "Rua" %>
        <%= a.text_field :street%>
      </div>
      <div>
        <%= a.label :number, "Número" %>
        <%= a.number_field :number %>
      </div>
      <div>
        <%= a.label :neighborhood, "Bairro" %>
        <%= a.text_field :neighborhood %>
      </div>
      <div>
        <%= a.label :city, "Cidade" %>
        <%= a.text_field :city %>
      </div>
      <div>
        <%= a.label :state, "Estado" %>
        <%= a.text_field :state %>
      </div>
      <div>
        <%= a.label :postal_code, "CEP" %>
        <%= a.text_field :postal_code %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.label :description, "Descrição" %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :pay_methods, "Métodos de pagamento" %>
    <%= f.text_field :pay_methods %>
  </div>
  <div>
    <%= f.label :pet_friendly, "Aceita pets" %>
    <%= f.check_box :pet_friendly %>
  </div>
  <div>
    <%= f.label :user_policies, "Políticas de uso" %>
    <%= f.text_area :user_policies %>
  </div>
  <div>
    <%= f.label :check_in_time, "Horário de check-in" %>
    <%= f.text_field :check_in_time %>
  </div>
  <div>
    <%= f.label :check_out_time, "Horário de check-out" %>
    <%= f.text_field :check_out_time %>
  </div>
  <div>
    <%= f.label :active, "Ativa" %>
    <%= f.check_box :active %>
  </div>
  <div>
    <%= f.submit "Criar Pousada" %>
  </div>
<% end %>