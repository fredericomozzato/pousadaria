<h1>Cadastro de Pousada</h1>

<%= form_with model: Inn.new do |f| %>
  <div>
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :corporate_name, "Razão social" %>
    <%= f.text_field :corporate_name %>
  </div>
  
  <div>
    <%= f.label :registration_number, "CNPJ" %>
    <%= f.text_field :registration_number %>
  </div>

  <div>
    <%= f.label :phone, "Telefone" %>
    <%= f.telephone_field :phone %>
  </div>

  <div>
    <%= f.label :email, "E-mail" %>
    <%= f.email_field :email %>
  </div>

    <%= f.fields_for :address do |a| %>
      <div>
        <%= a.label :street, "Rua" %>
        <%= a.text_field :street%>
      </div>

      <%= a.label :number, "Número" %>
      <%= a.number_field :number %>
    <% end %>

  <div>
    <%= f.label :description, "Descrição" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :pay_methods, "Métodos de pagamento" %>
    <%= f.text_field :pay_methods %>
  </div>

  <div>
    <%= f.label :pet_friendly, "Aceita pets" %>
    <%= f.check_box :pet_friendly %>
  </div>

  <div>
    <%= f.label :user_policies, "Políticas de uso" %>
    <%= f.text_area :user_policies %>
  </div>

  <div>
    <%= f.label :check_in_time, "Horário de check-in" %>
    <%= f.text_field :check_in_time %>
  </div>

  <div>
    <%= f.label :check_out_time, "Horário de check-out" %>
    <%= f.text_field :check_out_time %>
  </div>

  <div>
    <%= f.submit "Criar Pousada" %>
  </div>
<% end %>