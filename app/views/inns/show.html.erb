<h1>Dados da Pousada</h1>

<div>
  <dl>
    <dt>Nome:</dt>
    <dd><%= @inn.name %></dd>
    <dt>Telefone:</dt>
    <dd><%= @inn.phone %></dd>
    <dt>E-mail:</dt>
    <dd><%= @inn.email %></dd>
    <dt>Descrição:</dt>
    <dd><%= @inn.description %></dd>
    <dt>Métodos de pagamento:</dt>
    <dd><%= @inn.pay_methods %></dd>
    <dt>Aceita pets:</dt>
    <dd><%= @inn.pet_friendly ? "sim" : "não" %></dd>
    <dt>Políticas de uso:</dt>
    <dd><%= @inn.user_policies %></dd>
    <dt>Check-in:</dt>
    <dd>a partir das <%= @inn.check_in_time.strftime("%k:%M") %></dd>
    <dt>Check-out:</dt>
    <dd>até as <%= @inn.check_out_time.strftime("%k:%M") %></dd>
    <dt>Endereço:</dt>
    <dd><%= @inn.get_street_values %></dd>
    <dd><%= @inn.get_location_values %></dd>
    <dt>CEP:</dt>
    <dd><%= @inn.address.postal_code %></dd>
  </dl>
</div>
