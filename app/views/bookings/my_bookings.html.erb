<div class="text-center">
  <h1><%= Booking.model_name.human count: 2 %></h1>
</div>

<% if @bookings.empty? %>
  <p><%= t("no_bookings_found_for_user") %></p>
<% end %>

<div id="bookings-list" class="container d-flex flex-column align-items-center">
  <div class="row d-flex justify-content-center">
    <% @bookings.each do |booking| %>
      <div class="col-md-4">

        <div class="card">
          <div class="card-header">
            Reserva
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to booking.code, booking %></h5>
            <dl class="list-group list-group-flush">
              <dt><%= Inn.model_name.human count: 1 %>:</dt>
              <dd class="list-group-item"><%= booking.room.inn.name %></dd>
              <dt><%= Room.model_name.human count: 1 %>:</dt>
              <dd class="list-group-item"><%= booking.room.name %></dd>
              <dt><%= t("booking_period") %>:</dt>
              <dd class="list-group-item"><%= I18n.l(booking.start_date) %> - <%= I18n.l(booking.end_date) %></dd>
            </dl>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>


<section id="closed-bookings" class="container d-flex flex-column align-items-center">
  <h2><%= t("closed_bookings") %></h2>
    <% @closed_bookings.each do |closed_booking| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            Reserva
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to closed_booking.code, closed_booking %></h5>
            <dl class="list-group list-group-flush">
              <dt><%= Inn.model_name.human count: 1 %>:</dt>
              <dd class="list-group-item"><%= closed_booking.room.inn.name %></dd>
              <dt><%= Room.model_name.human count: 1 %>:</dt>
              <dd class="list-group-item"><%= closed_booking.room.name %></dd>
              <dt><%= t("booking_period") %>:</dt>
              <dd class="list-group-item"><%= I18n.l(closed_booking.start_date) %> - <%= I18n.l(closed_booking.end_date) %></dd>
            </dl>
          </div>
        </div>
      </div>
    <% end %>
</section>

<br>

<div class="text-center">
  <%= link_to t("back_to_beginning_link"), root_path, class: "btn btn-lg btn-outline-dark" %>
</div>