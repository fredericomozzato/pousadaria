<h1>Dados da Reserva</h1>

<dl>
  <dt>Quarto:</dt>
  <dd> <%= @room.name %></dd>

  <dt>Data de entrada:</dt>
  <dd><%= I18n.l(@pre_booking.start_date) %> a partir das <%= @inn.check_in_time.strftime("%H:%M") %> horas</dd>

  <dt>Data de saída:</dt>
  <dd><%= I18n.l(@pre_booking.end_date) %> até as <%= @inn.check_out_time.strftime("%H:%M") %> horas</dd>

  <dt>Número de hóspedes:</dt>
  <dd><%= @pre_booking.number_of_guests %></dd>

  <dt>Valor da reserva:</dt>
  <dd><%= number_to_currency @pre_booking.calculate_bill, unit: "R$", separator: ",", delimiter: "." %></dd>

  <dt>Métodos de pagamento:</dt>
  <dd><%= @inn.pay_methods %></dd>

  <%= form_with model: [@room, @pre_booking] do |f| %>
    <%= f.hidden_field :start_date %>
    <%= f.hidden_field :end_date %>
    <%= f.hidden_field :number_of_guests %>
    <%= f.submit "Confirmar reserva" %>
  <% end %>
</dl>

<%= link_to "Voltar", new_room_booking_path(params[:room_id]) %>

