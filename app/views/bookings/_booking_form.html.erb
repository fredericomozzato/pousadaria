<%= form_with(url: confirmation_room_bookings_path, method: :get) do |f| %>
  <div class="mb-3">
    <%= f.label :start_date, Booking.human_attribute_name(:start_date), class: "form-label" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :end_date, Booking.human_attribute_name(:end_date), class: "form-label" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :number_of_guests, Booking.human_attribute_name(:number_of_guests), class: "form-label" %>
    <%= f.number_field :number_of_guests, class: "form-control" %>
  </div>
  <div class="mb-3 text-center">
    <%= f.submit t("advance_button"), class: "btn btn-lg btn-dark" %>
  </div>
<% end %>