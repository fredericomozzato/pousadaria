<%= form_with(url: confirmation_room_bookings_path, method: :get) do |f| %>
  <div>
    <%= f.label :start_date, "Data de Check-in" %>
    <%= f.date_field :start_date %>
  </div>
  <div>
    <%= f.label :end_date, "Data de Check-out" %>
    <%= f.date_field :end_date %>
  </div>
  <div>
    <%= f.label :number_of_guests, "Número de hóspedes" %>
    <%= f.number_field :number_of_guests %>
  </div>
  <div>
    <%= f.submit "Avançar" %>
  </div>
<% end %>